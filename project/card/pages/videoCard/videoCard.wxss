@import "../index/index.wxss";

.card-container{
    position: absolute;width: 100%;height: 100%;
}

.video-preview{
    width: 450rpx;height: 740rpx;margin: 0 auto;
}
.video-preview video{
    display: block;width: 100%;height: 100%;
}
.add-btn{
    text-align: center;margin-top: 30rpx;
}
.add-btn text{
    color: #fff;
}

.video-edit{
    position: absolute;width: 100%;bottom: 0;
    display: flex;justify-content: space-around;font-size: 16px;background: rgba(49,49,49,0.6);padding: 20rpx;
}
.video-edit .edit-item{
    color: #fff;text-align: center;
}
.audio-content{
    width: 580rpx;height: 983rpx;margin: 0 auto;box-sizing: border-box;padding-top: 220rpx;margin-top: 40rpx;
}