/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avataPos{
  position: absolute;
  left: 0;
  top: 0;
}
.userinfo-nickname-wp{
  text-align: center;font-size: 14px;color: #fff;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx 20rpx 0;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.greeting-card{
  width: 100%;overflow: hidden;display: flex;justify-content: space-around;
}
.greeting-card .card{
  width: 260rpx;height: 160rpx;float: left;text-align: center;
  box-sizing: border-box;padding-top: 10rpx;border-radius: 30rpx;margin-bottom: 17rpx;
}
.greeting-card text{
  color: #fff;
}
.tradition-card{
  background: #fe6a6a;
}
.audio-card{
  background: #fea547;
}
.video-card{
  background: #6dabf6;
}
.interest-card{
  background: #b4e087;
}
.music-icon{
  position: absolute;width: 60rpx;height: 60rpx;right: 20rpx;top: 10rpx;border: 1px solid #000;border-radius: 50%;padding: 10rpx;
}
.music-icon image{
  display: block;width: 100%;height: 100%;
}

.music-icon.play{
    animation: play 1s linear infinite;
}
@keyframes play {
    0% {
        transform: rotate(0);
    }
    100% {
        transform: rotate(360deg);
    }
}
